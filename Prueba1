import requests
from pprint import pprint  # Para imprimir JSON bonito

response = requests.get('https://api.github.com/users/sergio')

# Ver el código de estado HTTP
print(f"Status Code: {response.status_code}")
print(f"Content-Type: {response.headers['Content-Type']}\n")

# Imprimir todo el JSON formateado
print("=== Datos completos ===")
pprint(response.json())

# Extraer solo algunos campos interesantes
print("\n=== Resumen ===")
data = response.json()
print(f"Usuario: {data['login']}")
print(f"Nombre: {data['name']}")
print(f"Ubicación: {data['location']}")
print(f"Repos públicos: {data['public_repos']}")
print(f"Seguidores: {data['followers']}")
print(f"Cuenta creada: {data['created_at']}")